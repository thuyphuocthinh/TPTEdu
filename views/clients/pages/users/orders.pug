extends ../../layouts/defaultLayout.pug 

block main 
    .container
        h4.my-4 Tài khoản
        if (orders.length > 0) 
            .row 
                .col-md-3.col-12
                    include ../../partials/profile-sider.pug
        
                .col-md-9.col-12
                    h5(
                        style="color: rgb(13,110,253);"
                    ) #{pageTitle}
                    .card.my-4
                        .card-header.fw-bold Danh sách đơn hàng
                        .card-body            
                            table.table.table-hover
                                thead
                                    tr.text-center
                                        th(scope='col') Mã đơn hàng 
                                        th(scope='col') Trạng thái
                                        th(scope='col') Tổng tiền
                                
                                tbody
                                    each order in orders
                                        tr.text-center.align-middle
                                            td 
                                                a(href=`/users/orders/${order.id}`) #{order.id}
                                            td 
                                                if(order.status === "Pending") 
                                                    span.badge.bg-warning Đang duyệt 
                                                else 
                                                    span.badge.bg-success Đã duyệt
                                            td #{order.totalCost} $
        else 
            .row
                .col-md-3.col-12
                    include ../../partials/profile-sider.pug
            
                .col-md-9.col-12
                    h5(
                        style="color: rgb(13,110,253);"
                    ) #{pageTitle}
                    p Chưa có đơn hàng nào
                          
                        
                    
